<odoo>
    <record id="view_pos_payment_method_apex_ecr_form" model="ir.ui.view">
        <field name="name">pos.payment.method.apex.ecr.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Apex ECR Settings">
                    <field name="apex_ecr_enabled"/>
                    <field name="apex_tid" invisible="not apex_ecr_enabled"/>
                    <field name="apex_mid" invisible="not apex_ecr_enabled"/>
                    <field name="apex_secure_key"
                           password="True"
                           modifiers='{"invisible": [["apex_ecr_enabled", "=", False]]}'/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>


